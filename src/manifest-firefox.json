{
  "manifest_version": 2,
  "name": "Tasks for Canvas (Grey-Out Edition)",
  "description": "An unofficial fork of the Tasks for Canvas extension, adding visual grey-out of completed or inactive tasks.",
  "version": "1.5.4",
  "icons": {
    "128": "icon-128.png"
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": ["icon-128.png", "options.html"],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "permissions": ["storage"],
  "background": {
    "scripts": ["background.bundle.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["contentScript.bundle.js"],
      "css": ["content.styles.css"],
      "all_frames": true
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true,
    "browser_style": true,
    "chrome_style": false
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "tasksforcanvas@jtchengdev.com"
    }
  }
}
